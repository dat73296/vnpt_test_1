@model IEnumerable<WebApplication3.Models.Food>

@{
    ViewData["Title"] = "Index1";
}

<h1 style="padding-left:400px">Danh sách các mặt hàng hiện có</h1>

<p>
    <a asp-action="Create">Tạo mặt hàng mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Tên món
            </th>
            <th>
                Giá
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src=@Url.Content("~/Image/" + item.Image) width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategory.Name)
            </td>
        </tr>
}
    </tbody>
</table>
