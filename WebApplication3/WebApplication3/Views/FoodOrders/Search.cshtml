@model IEnumerable<WebApplication3.Models.FoodOrder>

@{
    ViewData["Title"] = "ListSearch";
}

<h1 style="padding-left:300px;text-decoration:solid;text-decoration-color:brown">Danh sách tìm thấy</h1>


<table class="table" style="padding-left:250px">
    <thead>
        <tr>
            <th style="padding-left:50px">
                Nguời đặt
            </th>
            <th style="padding-left:50px">
                Tên món
            </th>
            <th style="padding-left:50px">
                Số lượng
            </th>
            <th style="padding-left:50px">
                Ngày đặt
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="padding-left:50px">
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td style="padding-left:50px">
                @Html.DisplayFor(modelItem => item.Food.Name)
            </td>

            <td style="padding-left:50px">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td style="padding-left:50px">
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>

        </tr>
        }
    </tbody>
</table>
<a style="padding-left:500px;padding-top:100px" asp-action="Export">Export Excel File</a>