@model IEnumerable<WebApplication3.Models.FoodOrder>

@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-left:300px">Danh sách các mặt hàng đã đặt</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                ID Order
            </th>
            <th>
                Tên món
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Đơn giá
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <img src=@Url.Content("~/Image/" + item.Food.Image) width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food.Price)
            </td>

            <td>
                <a style="text-decoration:none" asp-action="Up" asp-route-id="@item.ID">+</a>
                <a style="text-decoration:none" asp-action="Down" asp-route-id="@item.ID">-</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-controller="Foods" asp-action="Index">Quay lại</a>