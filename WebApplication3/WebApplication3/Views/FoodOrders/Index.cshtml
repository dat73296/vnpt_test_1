@model IEnumerable<WebApplication3.Models.FoodOrder>

@{
    ViewData["Title"] = "Index";
}
<h1 style="padding-left:500px">Đặt món</h1>
<table class="table">
    <thead>
        <tr>

            <th style="padding-left:50px">
                Nguời đặt
            </th>
            <th style="padding-left:100px">
                Tên món đặt
            </th>

            <th style="padding-left:100px">
                Số lượng
            </th>
            <th>
                Thời gian
            </th>
            <th>
                Trạng Thái
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="padding-left:50px">
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td style="padding-left:100px">
                @Html.DisplayFor(modelItem => item.Food.Name)
            </td>

            <td style="padding-left:100px">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td style="padding-left:100px">
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td style="padding-left:100px">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            </td>
        </tr>
        }
    </tbody>
</table>
<form asp-action="Search" method="post" style="padding-left:350px;margin-top:50px">
    <label>Chọn ngày</label>
    <input type="datetime-local" name="daytime">
    <input type="submit">
</form>
<div style="padding-left:200px;margin-top:100px">
    <a  asp-action="Export">Export Excel File</a><br />
    <a  asp-controller="FoodOrders" asp-action="Index">Quay trở lại</a>
</div>
